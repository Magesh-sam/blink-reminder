{
  "manifest_version": 3,
  "name": "Blink Reminder",
  "description": "Reminds you to blink every few minutes.",
  "version": "1.0",
  "permissions": ["notifications", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/blink.png"
  },
  "action": {
    "default_icon": "icons/blink.png"
  }
}
